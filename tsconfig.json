{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      // client
      "api/*": ["client/api/*"],
      "component/*": ["client/component/*"],
      "app/*": ["client/app/*"],
      "core/*": ["client/component/core/*"],
      "page/*": ["client/app/page/*"],
      "layout/*": ["client/layout/*"],
      "helper": ["client/helper/index.ts"],
      "type": ["client/type/index.ts"],
      "constant": ["client/constant/index.ts"],
      "error": ["client/error/index.ts"],
      "store": ["client/app/store.ts"],
      // server
      "controller/*": ["server/controller/*"],
      "model/*": ["server/model/*"]
    }
  }
}